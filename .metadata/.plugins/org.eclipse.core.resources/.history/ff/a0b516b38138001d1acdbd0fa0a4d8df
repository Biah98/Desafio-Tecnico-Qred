package com.desafiotecnicoqred.api.serialization;

import java.io.IOException;

import com.fasterxml.jackson.core.JsonGenerator;
import com.fasterxml.jackson.databind.JsonSerializer;
import com.fasterxml.jackson.databind.SerializerProvider;

public class CostunSmoothiesSerializer  extends JsonSerializer<Smoothies>{

	@Override
	public void serialize(Smoothies value, JsonGenerator gen, SerializerProvider serializers) throws IOException {
		// TODO Auto-generated method stub
		JsonGenerator.writeObject(smoothies.getNome());
	}

}
